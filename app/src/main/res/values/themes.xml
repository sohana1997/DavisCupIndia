<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DavisCupIndia" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#05CBFA</item>
        <item name="colorPrimaryVariant">#05CBFA</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#05CBFA</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- styles.xml -->
    <style name="welcome">

        <item name="android:textSize">
            48sp
        </item>
        <item name="fontFamily">@font/poppins_bold</item>

        <item name="android:textColor">
            #000000
        </item>

    </style>

    <style name="Theme.DavisCupIndia.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DavisCupIndia.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DavisCupIndia.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>