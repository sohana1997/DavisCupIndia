<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".auth.SignupActivity">

    <include
        android:id="@+id/include"
        layout="@layout/app_bar_back"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="155dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="41dp"
                android:gravity="top"
                android:text="Full Name"
                android:textAppearance="@style/email_addre"
                />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Enter your name"
                android:drawableEnd="@drawable/ic_vector__4_"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:maxLength="15"
                android:background="@drawable/et_bg"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_addre" />

            <TextView
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:gravity="top"
                android:text="Email Address"
                android:textAppearance="@style/email_addre"
                />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:drawableEnd="@drawable/ic_mail"
                android:drawablePadding="8dp"
                android:hint="Enter your email"
                android:padding="8dp"
                android:background="@drawable/et_bg"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_addre" />

            <TextView
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:gravity="top"
                android:text="Mobile Number"
                android:textAppearance="@style/email_addre"
                />

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:drawableEnd="@drawable/ic_baseline_call_24"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:drawableTint="#DADADA"
                android:hint="Enter mobile number"
                android:background="@drawable/et_bg"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_addre" />

            <TextView
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:gravity="top"
                android:text="Password"
                android:textAppearance="@style/email_addre"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:drawableEnd="@drawable/ic_ei_lock"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:hint="Enter your Password"
                android:background="@drawable/et_bg"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_addre" />




            <!-- Login -->
            <TextView
                android:id="@+id/loginBt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="53dp"
                android:background="@drawable/login_bt_bg"
                android:gravity="center"
                android:text="@string/submit"
                android:textAppearance="@style/login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forgot_pass" />


            <!-- Donâ€™t have an Account SignUp -->
            <TextView
                android:id="@+id/don_t_have_"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal|top"
                android:text="@string/already_have_an_account_login"
                android:textAppearance="@style/don_t_have_"
                app:layout_constraintEnd_toEndOf="@+id/loginBt"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="@+id/loginBt"
                app:layout_constraintTop_toBottomOf="@+id/loginBt" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>