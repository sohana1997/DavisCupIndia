<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.os.daviscupindia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DavisCupIndia"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".auth.ForgotPasswordActivity"
            android:theme="@style/Theme.DavisCupIndia.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".auth.ChangePasswordActivity"
            android:theme="@style/Theme.DavisCupIndia.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".WebViewActivity"
            android:exported="false"
            android:label="@string/title_activity_web_view"
            android:theme="@style/Theme.DavisCupIndia.NoActionBar" />
        <activity
            android:name=".ui.home.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.DavisCupIndia" />
        <activity
            android:name=".auth.VerifyOtpActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".auth.SignupActivity"
            android:exported="false"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".auth.WelcomeActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".auth.LoingActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>